<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bhatt.selfhelpher">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SubSelect">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Courselib"
            android:parentActivityName=".SubSelect" />
        <activity android:name=".CourseWindow" />
        <activity android:name=".MainWindow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>

        <provider
            android:name=".coursedatabase.CourseContentProvider"
            android:authorities="com.example.bhatt.selfhelpher"
            android:exported="false" />

        <provider
            android:name=".UserDatabase.UserContentProvider"
            android:authorities="com.example.bhatt.selfhelpher.UserDatabase"
            android:exported="false" />


        <activity android:name=".YoutubeVideo"
                  android:configChanges="orientation|keyboardHidden">

        </activity>
    </application>

</manifest>